{
  "extends": [
    "config:best-practices",
    ":automergeAll",
    ":enablePrecommit",
    ":gitSignOff",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "golang",
      "matchDatasources": [
        "golang-version"
      ],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "golang",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "golang"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ]
}
